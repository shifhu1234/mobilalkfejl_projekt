<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

    <ImageView
        android:id="@+id/fruitCategoryImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/fruitcatergoryimage"
        android:layout_marginTop="@dimen/default_marginStart"
        android:layout_marginStart="@dimen/default_marginLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:text="@string/fruitsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/default_marginStart"
        android:layout_marginStart="@dimen/default_marginLeft"

        app:layout_constraintLeft_toRightOf="@id/fruitCategoryImage"
        app:layout_constraintTop_toTopOf="@id/fruitCategoryImage"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>